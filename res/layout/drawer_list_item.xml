<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/draweritem"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:background="?android:attr/activatedBackgroundIndicator"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/draweritem_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:layout_weight="1"
        android:background="?android:attr/activatedBackgroundIndicator"
        android:clickable="false"
        android:focusable="false"
        android:gravity="left|center_vertical|fill_horizontal"
        android:padding="16dp"
        android:text="Namewefwef"
        android:textColor="#fff"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/draweritem_lastcheckin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignRight="@id/draweritem_name"
        android:layout_centerInParent="true"
        android:layout_toLeftOf="@id/draweritem_name"
        android:layout_weight="1"
        android:background="?android:attr/activatedBackgroundIndicator"
        android:clickable="false"
        android:focusable="false"
        android:gravity="right|center_vertical"
        android:padding="16dp"
        android:text="51 Minutes ago"
        android:textColor="#fff"
        android:textSize="12sp" />

</RelativeLayout>